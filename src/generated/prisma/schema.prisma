generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  duration    Int
  genre       String
  rating      Decimal  @db.Decimal(4, 2)
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@map("movie")
}
